<h1>Listing interactions</h1>

<table>
  <tr>
    <th>Friend</th>
    <th>User</th>
    <th>Datetime</th>
    <th>Description</th>
    <th>Interaction type</th>
    <th>Points</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @interactions.each do |interaction| %>
  <tr>
    <td><%= interaction.friend_id %></td>
    <td><%= interaction.user_id %></td>
    <td><%= interaction.datetime %></td>
    <td><%= interaction.description %></td>
    <td><%= interaction.interaction_type_id %></td>
    <td><%= interaction.points %></td>
    <td><%= link_to 'Show', interaction %></td>
    <td><%= link_to 'Edit', edit_interaction_path(interaction) %></td>
    <td><%= link_to 'Destroy', interaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

